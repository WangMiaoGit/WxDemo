/* pages/mainIndex/mainIndex.wxss */
.container {
  background-color: #576b95;
  width: 100%;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
}

.input-out{
  width: 100%;
  display: flex;
}

.input-out input{
  background-color: white;

  /* 边框圆角 */
  border-radius: 30rpx;
  width: 100%;
  height: 60rpx;
  font-size: 20rpx;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
  
  
}

.container swiper {
  background-color: white;
  width: 100%;
}

swiper swiper-item {
  width: 100%;
}

swiper swiper-item navigator {
  height: 100%;
  width: 100%;
}

swiper swiper-item image {
  height: 100%;
  width: 100%;
  border-radius: 16rpx;
}

/* 菜单 */
.nav {
  display: flex;
  flex-direction: row;
  /* 换行 */
  flex-wrap: wrap;
  /* 两端对齐 */
  justify-content: space-between;

  background-color: pink;
  margin-top: 10rpx;
  border-radius: 16rpx;

}

.nav .menu {
  display: flex;
  flex-direction: column;
  width: 25%;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.menu text {
  font-size: 20rpx;
  color: #666;
  margin-top: 10rpx;
}

.menu image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

/* 产品列表 */

.hot {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.productList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: #666;
}

.productList .product {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 46%;
  margin: 6rpx 14rpx;

  background-color: slateblue;
  border-radius: 16rpx;
}

.product image {
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  width: 100%;
}

.info {
  display: flex;
  flex-direction: row;
  /* 两边对齐 */
  justify-content: space-around;

}

.name {
  color: white;
}

.info .price {
  color: red;

}