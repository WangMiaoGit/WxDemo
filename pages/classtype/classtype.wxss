/* pages/classtype/classtype.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: row;
  /* justify-content: start;
  align-items: flex-start; */
  background-color: blueviolet;
}

.menu {
  background-color: #225599;
  display: flex;
  flex-direction: column;
  width: 20%;
  height: 100vh;
  /* 主族方向 */
  justify-content: start;
  /* 副族方向 */
  align-items: center;
}

.menu .classtype {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* 主族方向 */
  justify-content: start;
  /* 副族方向 */
  align-items: center;

}

.classtype text {

  font-weight: 500;
  margin-top: 16rpx;
}

.selected {
  color: red;
}

.unselected {
  color: white;
}

.list {
  background-color: turquoise;
  width: 80%;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.list .productList {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-top: 10rpx;
  border: 1px solid #000;
}

.list .productListLast {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border: 1px solid #000;
}

.info {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.info text {
  margin-left: 16rpx;
}

.info text:last-child {
  margin-top: 10rpx;
}

image {
  width: 300rpx;

}